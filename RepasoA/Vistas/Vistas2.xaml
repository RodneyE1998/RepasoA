<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RepasoA.Vistas.Vistas2"
             Title="Vistas2">
    <VerticalStackLayout Spacing="15" Padding="15">
        <Label x:Name="lblUsuario"
               TextColor="red"
               HorizontalTextAlignment="End"
             />
        <Label Text="Ventana de Registro"
               FontSize="20"
               HorizontalTextAlignment="Center"/>

        <Picker x:Name="estudiantes">
            <Picker.Items>
                <x:String>Carlos</x:String>
                <x:String>ANA</x:String>
                <x:String>Javier</x:String>
            </Picker.Items>
        </Picker>

        <Entry x:Name="txtSalario"
               Placeholder="Ingrese el Salario"
               Keyboard="Numeric"
               MaxLength="5">
        </Entry>

        <DatePicker x:Name="Fechas" Date="01/01/2024"/>

        <Button x:Name="btnCalcular"
                Text="CALCULAR"
                Clicked="btnCalcular_Clicked"/> 


    </VerticalStackLayout>
</ContentPage>